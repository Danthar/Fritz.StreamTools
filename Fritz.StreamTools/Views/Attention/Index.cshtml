@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<title>Attention</title>
</head>
<body>	
	<script src="~/lib/signalr/signalr-client.js"></script>
	<script src="~/js/attentionhub.js"></script>

	<script>
		var audio = new Audio('@Url.Content(@"~/contents/hey_listen.mp3")');
		var scottAudio = new Audio('@Url.Content(@"~/contents/Scott!!.mp3")');
		var baseFolder = '@Url.Content(@"~/contents")';

		var hub = new AttentionHub();
		hub.onAlertFritz = () => {
			alertFritz();
		}

		hub.onSummonScott = () => {
			scottAudio.play();
		}

		hub.onPlaySoundEffect = (fileName) => {
			new Audio(baseFolder + '/' + fileName).play();
		}

		function alertFritz() {
			audio.play();
		}

		(function () {
			hub.start();
		})();

	</script>
</body>
</html>
